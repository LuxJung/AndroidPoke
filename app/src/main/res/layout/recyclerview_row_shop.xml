<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/recylcerview_row_shopimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/profile_bolder"
        android:src="@mipmap/ic_launcher_round"
        android:transitionName="Poketmon_IMG" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recylcerview_row_shopimage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recylcerview_row_shopitemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="아이템이름"
            android:textColorHint="#000000"
            android:textColor="#3f3f3f"
            android:textSize="10sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>